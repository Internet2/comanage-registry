<!--
  While this schema mostly works with database prefixes, foreign key constraints
  must be specified in raw SQL, which needs the prefixed table name.
-->
<schema version="0.3">
  <table name="core_apis">
    <field name="id" type="I">
      <key />
      <autoincrement />
    </field>
    <field name="co_id" type="I">
      <notnull />
      <constraint>REFERENCES cm_cos(id)</constraint>
    </field>
    <field name="status" type="C" size="2" />
    <field name="api_user_id" type="I">
      <notnull />
      <constraint>REFERENCES cm_api_users(id)</constraint>
    </field>
    <field name="identifier_type" type="C" size="32" />
    <field name="index_response_type" type="C" size="2" />
    <field name="api" type="C" size="2" />
    <field name="created" type="T" />
    <field name="modified" type="T" />
    <field name="core_api_id" type="I">
      <constraint>REFERENCES cm_core_apis(id)</constraint>
    </field>
    <field name="revision" type="I" />
    <field name="deleted" type="L" />
    <field name="actor_identifier" type="C" size="256" />
    
    <index name="core_apis_i1">
      <col>co_id</col>
    </index>
    <index name="core_apis_i2">
      <col>api_user_id</col>
    </index>
    <index name="core_apis_i3">
      <col>core_api_id</col>
    </index>
  </table>
</schema>