<!--
  While this schema mostly works with database prefixes, foreign key constraints
  must be specified in raw SQL, which needs the prefixed table name.
-->
<schema version="0.3">
  <table name="co_mailman_provisioner_targets">
    <field name="id" type="I">
      <key />
      <autoincrement />
    </field>
    <field name="co_provisioning_target_id" type="I">
      <constraint>REFERENCES cm_co_provisioning_targets(id)</constraint>
    </field>
    <field name="serverurl" type="C" size="256" />
    <field name="adminuser" type="C" size="128" />
    <field name="password" type="C" size="64" />
    <field name="domain" type="C" size="128" />
    <field name="pref_email_type" type="C" size="32" />
    <field name="unmanaged_email_mode" type="C" size="2" />
    <field name="created" type="T" />
    <field name="modified" type="T" />
    
    <index name="co_mailman_provisioner_targets_i1">
      <col>co_provisioning_target_id</col>
      <unique />
    </index>
  </table>
  
  <table name="co_mailman_lists">
    <field name="id" type="I">
      <key />
      <autoincrement />
    </field>
    <field name="co_mailman_provisioner_target_id" type="I">
      <constraint>REFERENCES cm_co_mailman_provisioner_targets(id)</constraint>
    </field>
    <field name="co_email_list_id" type="I">
      <constraint>REFERENCES cm_co_email_lists(id)</constraint>
    </field>
    <field name="mailman_list_identifier" type="C" size="128" />
    <field name="created" type="T" />
    <field name="modified" type="T" />
    
    <index name="co_mailman_lists_i1">
      <col>co_mailman_provisioner_target_id</col>
    </index>
    <index name="co_mailman_lists_i2">
      <col>co_email_list_id</col>
    </index>
  </table>
</schema>
