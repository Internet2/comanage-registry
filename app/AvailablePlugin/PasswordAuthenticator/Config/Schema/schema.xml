<!--
  While this schema mostly works with database prefixes, foreign key constraints
  must be specified in raw SQL, which needs the prefixed table name.
-->
<schema version="0.3">
  <table name="password_authenticators">
    <field name="id" type="I">
      <key />
      <autoincrement />
    </field>
    <field name="authenticator_id" type="I">
      <constraint>REFERENCES cm_authenticators(id)</constraint>
    </field>
    <field name="min_length" type="I" />
    <field name="max_length" type="I" />
    <field name="created" type="T" />
    <field name="modified" type="T" />
    
    <index name="password_authenticators_i1">
      <col>authenticator_id</col>
      <unique />
    </index>
  </table>
  
  <table name="passwords">
    <field name="id" type="I">
      <key />
      <autoincrement />
    </field>
    <field name="password_authenticator_id" type="I">
      <constraint>REFERENCES cm_password_authenticators(id)</constraint>
    </field>
    <field name="co_person_id" type="I">
      <constraint>REFERENCES cm_co_people(id)</constraint>
    </field>
    <!-- Recommended size for use with php password_hash default algorithm is 255-->
    <field name="password" type="C" size="256" />
    <field name="password_type" type="C" size="2" />
    <field name="created" type="T" />
    <field name="modified" type="T" />
  </table>
</schema>